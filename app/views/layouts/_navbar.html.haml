%nav.navbar.navbar-default
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "Instagram", root_path, class: "navbar-brand"
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
      = form_for :search, html: { class: 'navbar-form navbar-right' }  do |f|
        .form-group
          = f.text_field :term, placeholder: "search for users...", class: "form-control", size: 30
      - if user_signed_in?
        %ul.nav.navbar-nav.navbar-right
          %li= link_to "New Post", new_post_path

          %li.dropdown
            %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              = current_user.username
              %span.caret
            %ul.dropdown-menu
              %li= link_to "Account Settings", edit_user_registration_path
              %li= link_to "My Profile", user_path(current_user)

    / /.navbar-collapse
  / /.container-fluid
