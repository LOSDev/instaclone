- if current_user.likes?(@post)
  = button_to unlike_post_path(@post), method: :delete, remote: true, class: "btn btn-primary" do
    %span.glyphicon.glyphicon-heart-empty
    Unlike

- else
  = button_to like_post_path(@post), remote: true, class: "btn btn-primary" do
    %span.glyphicon.glyphicon-heart
    Like
